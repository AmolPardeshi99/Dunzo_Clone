<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCartitemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="@string/onion"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/circle_dot" />

    <TextView
        android:id="@+id/tvCartItemWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCartitemName"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:text="@string/_1_kg"
        android:textColor="@color/lightgreen"
        app:drawableRightCompat="@drawable/ic_arrow_down" />

    <TextView
        android:id="@+id/tvCartItemPrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="25dp"
        android:text="@string/_270"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_toStartOf="@+id/tvCartItemPrise"
        app:cardCornerRadius="30dp"
        app:strokeColor="@color/grey"
        app:strokeWidth="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivaddbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_horizontal_rule_24"
                android:textColor="@color/darkgreen"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCartItemQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/darkgreen"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivRemovebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_add_24"
                android:textColor="@color/darkgreen"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
